{% extends 'base.html.twig' %}

{% block title %}Program{% endblock %}

{% block body %}
    <h1>Program</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ program.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ program.title }}</td>
        </tr>
        <tr>
            <th>Summary</th>
            <td>{{ program.summary }}</td>
        </tr>
        <tr>
            <th>Poster</th>
            <td>{{ program.poster }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('program_index') }}">back to list</a>


    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('program_edit', {'Slug': program.Slug}) }}">Modifier</a>
        {{ include('program/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}
