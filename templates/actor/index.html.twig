{% extends 'base.html.twig' %}

{% block title %}Actor index{% endblock %}

{% block body %}
    <h1>Actor index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Slug</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for actor in actors %}
            <tr>
                <td>{{ actor.id }}</td>
                <td>{{ actor.name }}</td>
                <td>{{ actor.Slug }}</td>
                <td>
                    <a href="{{ path('actor_show', {'Slug': actor.Slug}) }}">show</a>

                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('actor_edit', {'Slug': actor.Slug}) }}">Modifier</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('actor_new') }}">Ajouter un acteur</a>
    {%endif%}

{% endblock %}
